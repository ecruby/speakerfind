%h2 Sign up

-form_for @user do |f|
  %fieldset
    %legend User Details
    %ol
      %li
        =f.label :first_name
        =f.text_field :first_name
      %li
        =f.label :last_name
        =f.text_field :last_name
      %li
        =f.label :email
        =f.text_field :email
      %li
        =f.label :password
        =f.password_field :password
      %li
        =f.label :password_confirmation
        =f.password_field :password_confirmation
      %li
        =f.submit "Create account"
        
         